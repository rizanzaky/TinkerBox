    <UserSecretsId>4ce4dd25-f5fe-4232-8fe1-3d29db889640</UserSecretsId>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration.UserSecrets" Version="8.0.1" />
